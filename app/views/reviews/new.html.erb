<h2>Leave a review for <em><%= @restaurant.name %></em></h2>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating, collection: (1..5) %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", restaurant_path(@restaurant), class: "btn btn-danger cancel-btn" %>
